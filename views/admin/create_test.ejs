<%- include("navbar.ejs") %>


<form method="post" action="/admin/save_test" enctype="multipart/form-data">
    <div class="container-fluid mt-5 bg-white p-3 ">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Create Test</h1>
            </div>
            <div class="col-md-6">
                <h5 class="mt-3">Test Title</h5>
                <input type="text" class="form-control" name="test_title" 
                placeholder="Enter Test Title"required />
            </div>
            <div class="col-md-3">
                <h5 class="mt-3">Test Title</h5>
                <select class="custom-select form-control"  name="subject_id">
                    <option selected disabled value="">Select Subjects</option>
                    <% for(i=0;i<subject.length;i++){ %>
                        <option value="<%=subject[i].subject_id%>">
                            <%=subject[i].subject_name%>
                        </option>
                        <% } %>
                  </select>
            </div>
            <div class="col-md-3">
                <h5 class="mt-3">Test Image</h5>
                <input type="file" class="form-control" name="test_image" required />
                
            </div>

            <div class="col-md-3">
                <h5 class="mt-4">No. Of Questions</h5>
                <input type="number" class="form-control" id="no_of_questions"  name="no_of_questions" 
                value="50" onkeyup="total_marks.value=no_of_questions.value*marks_p_que.value" required />
            </div>
            <div class="col-md-3">
                <h5 class="mt-4">Marks Per Question</h5>
                <input type="number" class="form-control" id="marks_p_que"  name="marks_p_que" 
                value="2" onkeyup="total_marks.value=no_of_questions.value*marks_p_que.value" required />
            </div>
            <div class="col-md-3">
                <h5 class="mt-4">Total Marks</h5>
                <input type="number" class="form-control" readonly id="total_marks" name="total_marks" 
                value="100" />
            </div>

            <div class="col-md-3">
                <h5 class="mt-4">Duration(Minutes)</h5>
                <input type="number" class="form-control" name="test_duration" value="60" required/>
            </div>
            <div class="col-md-12 mt-5 mb-3 text-center">
                <button class="btn btn-dark ">Create Test</button>
            </div>
        </div>
    </div>
</form>

