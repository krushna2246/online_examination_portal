<%- include("navbar.ejs") %>

<style>
    .my_btn{
        height: 35px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 50px;
        font-size: 20px;
        background-color: white;
    }
    .my_active_btn{
        background-color: black;
        color: white;
    }
    a{
        text-decoration: none !important;
    }
</style>

<div class="container-fluid mt-5 bg-white p-3">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Test List</h1>
        </div>
        

        <div class="col-md-12 mt-4">
            <table class=" table table-sm table-bordered">
                <tr>
                    <th></th>
                    <th>SN</th>
                    <th>Test Title</th>
                    <th>Subject</th>
                    <th>Total Question</th>
                    <th>Total Marks</th>
                    <th>Duration</th>
                </tr>
                <% for(i=0;i<test_list.length;i++){ %>
                    <tr>
                        <td class="m-0" style="width: 100px;">
                                <button class="btn btn-primary btn-sm">
                                    <i class="fa fa-info-circle w-100 p-0"></i>
                                </button>
                            
                                <button class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i>
                                </button>
                        </td>
                        <td><%= i+1 %></td>
                        <td><%= test_list[i]['test_title'] %></td>
                        <td><%= test_list[i]['subject_name'] %></td>
                        <td><%= test_list[i]['no_of_questions'] %> Que</td>
                        <td><%= test_list[i]['total_marks'] %></td>
                        <td><%= test_list[i]['test_duration'] %> Minutes</td>
                        
                    </tr>
                <% } %>
            </table>
        </div>

    </div>
</div>

<%- include("footer.ejs") %>
